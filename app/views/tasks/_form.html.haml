= form_with(model: task, class: "contents") do |form|
  - if task.errors.any?
    #error_explanation.bg-red-50.text-red-500.px-3.py-2.font-medium.rounded-lg.mt-3
      %h2
        = pluralize(task.errors.count, *t('error'))
        = t('prohibited_alert')
      %ul
        - task.errors.each do |error|
          %li= "#{t("models.attributes.task.#{error.attribute}")} #{t("activerecord.errors.models.task.attributes.#{error.attribute}.#{error.type}")}"
  .my-5
    = form.label t('models.attributes.task.title')
    = form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full"
  .my-5
    = form.label t('models.attributes.task.description')
    = form.text_field :description, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full"
  .inline
    = form.submit t(action_name == 'new' ? 'models.save_task' : 'models.update_task'), class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer"
